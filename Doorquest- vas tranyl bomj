let strenght = 0;
let strenght1 = 0;
let magic = 0;
let health = 0;
let intelligence = 0;
let death = false;
let strenght3 = false;
let strenght4 = false;
let gameOver = false;
let gameOverBomj = false;

alert("Добро пожаловать в дверной квест")
var userchoise = parseInt(prompt("Выберите вариант куда вы пойдете: (1)-левая дверь, (2)-центральная дверь, (3)-правая дверь"))
if (userchoise == 1) {
    var userchoise2 = parseInt(prompt("Вы открыли дверь и попали в мир аниме-ваши действия: (1)-Начать развиваться и исполнить свою мечту и получить гарем; (2)-Нифига не делать и жить размеренной жизнью")) 
    if (userchoise2 === 1) {
        for(let i = 0; i < 10; i++) {
            var userchoise3 = parseInt(prompt("Ваш выбор, что вы хотите сделать, у вас 100 очков, которые вы можете вложить в эти навыки: (1)-сила, (2)-Кол-во жизней, (3)-Магия, (4)-интеллект"))
            if (userchoise3 === 1) {
                alert("Вы прокачали силу на 10");
                strenght = strenght + 10;
            }
            else if (userchoise3 === 2) {
                alert("Вы прокачали кол-во жизней на 10");
                health = health + 10;
            }
            else if (userchoise3 === 3) {
                alert("Вы прокачали магия на 10");
                magic = magic + 10;
            }
            else if (userchoise3 === 4) {
                alert("Вы прокачали интеллект на 10");
                intelligence = magic + 10;
            }
        }
        alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваша сила равна ' + strenght + ' из 100');
        alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваша магическая сила равна ' + magic + ' из 100');
        alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваша сила равна ' + health + ' из 100');
        alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваш интеллект равна ' + intelligence + ' из 100');
    }
}

if (userchoise2 === 2) {
        var userchoise4 = parseInt(prompt("Скукота, ладно. Ваш выбор, что вы хотите сделать: (1)-устроится на работу разнорабочим, (2)-наклянчить на хлеб у прохожих, (3)-Жить с бомжами, (4)- Поссать в бассейн и вас арестует полиция"))
    if (userchoise4 === 1) {
        alert('Вы получили достижения "Работник" и повысили силовые показатели на 5 в результате тяганье кирпичей');
        strenght = strenght + 5;
    }
    else if (userchoise4 === 2) {
        alert('Вы наклянчили на хлеб 2 монеты, купили и съели хлеб. Вы довольный лежите, но вдруг у вас закололо сердце и вы умерли от инсульта. Бывает :)');
        death = true;
    }
    else if (userchoise4 === 3) {
        alert('Вы выбрали жить с бомжами и получили достижение "Пожизененный бомж"');
        gameOverBomj = true;
    }
    else if (userchoise4 === 4) {
        alert('Вы получили дубинкой по репе и очнулись за решеткой с двумя людьми');
        gameOver = true 
    }
}
if (death == true) alert('Вы мертвы')
if (gameOverBomj == true) alert('Вас трахнул бомж и вы умерли')
if (gameOver == true) alert('Вас отодрали двое сокамерников, с кем не бывает <3')

if (userchoise === 2) {
    alert("Вы открыли дверь и умерли, бывает :) ")
}
if (userchoise === 3) {
    for(let t = 0; t < 10; t++) {
        var userchoise5 = parseInt(prompt("Вы открыли дверь и попали на марс, теперь вы DOOM GUY. Ваш выбор, что вы хотите сделать: (1)-Истребить всех демонов, (2)-Пойти сразу на 1 босса, (3)-Полежать и отдохнуть на операционном столе :), (4)-Расчленять демонов под Caramelldansen  Speedy Swedish "))
        if (userchoise5 === 1) {
            alert('Не плохой выбор, вы получили бафф в виде силы на 20000, КУРИШИТЕ ИХ В ТРУХУ <3');
            strengh = 20000;
            strenght3 = true;
            break;
        }
        else if (userchoise5 === 2) {
            alert('Вы просрали, так как у вас еще не достаточно скилла')
            death = true;
            break;
        }
        else if (userchoise5 === 3) {
            alert('Вы мертвы, так как вас убил демон');
            death = true;
            break;
        }
        else if (userchoise5 === 4) {
            alert('Отличный выбор, наслаждайтесь прекрасным experience-ом расчлененки и радужной, веселой музыки <3. Вы получаете бафф к силе на 100000');
            strenght1 = 100000;
            strenght4 = true;
            break;
        }
    }
}
if (strenght3 == true) alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваша сила равна ' + strenght + ' из 100000');
if (strenght4 == true) alert('Продолжайте в том же духе, и прокачайвайтесь дальше свои благодаря разным сражениям, ваша сила равна ' + strenght1 + ' из 100000');

if (death == true) alert('Вы мертвы')
alert("Вы прошли мини квест с дверьми")
